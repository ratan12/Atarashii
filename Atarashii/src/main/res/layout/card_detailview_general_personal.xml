<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/status"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/highlite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_status"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/statusText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/status"
        android:background="@color/primarytransparant" />

    <RelativeLayout
        android:id="@+id/progress1"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_below="@id/divider1"
        android:background="@drawable/highlite">

        <TextView
            android:id="@+id/progress1Label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_volumes"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/progress1Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/progress1Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/progress1Text1"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/progress2"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:layout_below="@id/progress1"
        android:background="@drawable/highlite">

        <View
            android:id="@+id/divider2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/primarytransparant" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_chapters"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/progress2Text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/progress2Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/progress2Text1"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/scorePanel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/progress2"
        android:background="@drawable/highlite">

        <View
            android:id="@+id/divider3"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/primarytransparant" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_my_score"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/myScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="14sp" />
    </RelativeLayout>
</RelativeLayout>
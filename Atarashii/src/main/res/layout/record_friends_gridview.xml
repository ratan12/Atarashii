<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/details_card"
    android:layout_width="fill_parent"
    android:layout_height="72dp"
    android:layout_gravity="center"
    android:background="@drawable/highlite"
    android:orientation="horizontal">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/profileImg"
        android:layout_width="40dp"
        android:layout_height="40dp"
        fresco:failureImage="@drawable/cover_error"
        fresco:placeholderImage="@drawable/cover_loading"
        fresco:roundAsCircle="true"
        android:layout_margin="16dp"
        android:contentDescription="@string/layout_card_loading"
        android:gravity="center_vertical"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="72dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/layout_card_loading"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead" />


        <TextView
            android:id="@+id/lastonlineLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:text="@string/layout_card_last"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/friends_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_toRightOf="@id/lastonlineLabel"
            android:text=": "
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#757575"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/lastonline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/userName"
            android:layout_toRightOf="@id/friends_divider"
            android:text="@string/layout_card_loading"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="#757575"
            android:textSize="14sp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/removeButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:contentDescription="@string/layout_card_loading"
        android:gravity="center_vertical"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_close_grey"
        android:visibility="gone"
        android:padding="8dp"
        android:layout_marginRight="8dp" />

</RelativeLayout>
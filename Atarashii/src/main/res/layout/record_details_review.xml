<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BaseCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp"
    card_view:cardElevation="0dp"
    card_view:cardPreventCornerOverlap="false">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="@drawable/card_header">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/CardTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center_vertical"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="60dp"
                android:paddingRight="16dp"
                android:scrollHorizontally="true"
                android:singleLine="true"
                android:text="@string/card_content_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/Cardsub"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/CardTitle"
                android:gravity="center_vertical"
                android:paddingLeft="60dp"
                android:paddingRight="16dp"
                android:text="@string/card_content_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Cardsub2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/CardTitle"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:paddingRight="12dp"
                android:text="@string/card_content_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/Cardsub3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/Cardsub2"
                android:gravity="right"
                android:paddingRight="12dp"
                android:text="@string/card_content_loading"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/white"
                android:textSize="14sp" />

        </RelativeLayout>
        
        <com.facebook.drawee.view.DraweeView
            android:id="@+id/coverImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:paddingLeft="12dp"
            android:paddingTop="12dp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/header"
        android:background="@drawable/highlite"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="68dp" />
</android.support.v7.widget.CardView>
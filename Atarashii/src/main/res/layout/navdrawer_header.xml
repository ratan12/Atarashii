<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="172dp">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/NDimage"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        fresco:failureImageScaleType="centerCrop"
        fresco:failureImage="@drawable/atarashii_background"
        fresco:placeholderImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/atarashii_background"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/Image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        fresco:roundAsCircle="true"
        android:src="@drawable/ic_person"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/NDimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="@string/layout_card_loading"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/siteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:text="MyAnimeList"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>
    </RelativeLayout>
</RelativeLayout>

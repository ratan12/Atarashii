<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/NDimage"
        android:layout_width="match_parent"
        android:layout_height="172dp"
        fresco:failureImage="@drawable/atarashii_background"
        fresco:failureImageScaleType="centerCrop"
        fresco:placeholderImage="@drawable/atarashii_background"
        fresco:placeholderImageScaleType="centerCrop"/>

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/Image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="40dp"
        android:src="@drawable/ic_person"
        fresco:roundAsCircle="true"/>

    <RelativeLayout
        android:id="@+id/AccountList"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignBottom="@+id/NDimage"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dp"
        android:background="@drawable/highlite"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:capitalize="words"
            android:text="@string/layout_card_loading"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body2"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/siteName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp"
            android:text="MyAnimeList"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Body1"
            android:textColor="#FFFFFF"
            android:textSize="14sp"/>


        <ImageView
            android:id="@+id/accountswitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/siteName"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/siteName"
            android:layout_marginEnd="17dp"
            android:layout_marginRight="16dp"
            android:src="@android:drawable/arrow_up_float"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/accountGroup"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_below="@id/NDimage"
        android:visibility="gone">

        <net.somethingdreadful.MAL.account.ListView
            android:id="@+id/accounts"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:visibility="visible"/>

        <RelativeLayout
            android:id="@+id/addAccount"
            android:layout_width="fill_parent"
            android:layout_height="64dp"
            android:layout_below="@id/accounts"
            android:layout_gravity="center"
            android:background="@drawable/highlite"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profileImg"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="16dp"
                android:contentDescription="@string/layout_card_loading"
                android:gravity="center_vertical"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_person_add_grey_48px"/>


            <TextView
                android:id="@+id/userName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="72dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="@string/account_add"
                android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
                android:textColor="#212121"
                android:textSize="16sp"/>

        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>

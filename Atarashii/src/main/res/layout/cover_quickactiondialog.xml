<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mainLayout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/coverdialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:maxLines="2"
        android:paddingLeft="28dp"
        android:paddingRight="28dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textColor="@android:color/white"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/coverdialog_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/coverdialog_title"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="8dp"
        android:paddingLeft="32dp"
        android:paddingRight="32dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@android:color/white"
        android:textSize="14sp"/>

    <RelativeLayout
        android:id="@+id/fab_progress"
        android:layout_marginBottom="8dp"
        android:layout_below="@+id/coverdialog_progress"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:background="@drawable/cover_button">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fab_markdone"
        android:layout_below="@+id/coverdialog_progress"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/cover_button">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fab_copytitle"
        android:layout_below="@+id/fab_markdone"
        android:layout_width="200dp"
        android:layout_marginBottom="8dp"
        android:layout_height="48dp"
        android:background="@drawable/cover_button">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/fab_dismiss"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:layout_below="@+id/fab_copytitle"
        android:background="@drawable/cover_button"
        android:foreground="@drawable/highlite">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/dismissIcon"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginBottom="6dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="6dp"
            fresco:actualImageResource="@drawable/ic_close_grey_48px"
            fresco:placeholderImageScaleType="fitCenter"
            fresco:roundAsCircle="true"
            fresco:roundingBorderColor="@color/primaryDark"/>

        <TextView
            android:id="@+id/igf_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:layout_toEndOf="@+id/dismissIcon"
            android:layout_toRightOf="@+id/dismissIcon"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="@string/coverdialog_dismiss"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@android:color/white"
            android:textSize="16sp"/>
    </RelativeLayout>
</RelativeLayout>
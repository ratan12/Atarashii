<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent">

    <RelativeLayout
        android:id="@+id/rewatchPriorityPanel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/highlite">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_rewatch_priority"
            android:textColor="#000000"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/priority"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </RelativeLayout>

    <View
        android:id="@+id/divider1"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rewatchPriorityPanel"
        android:background="@color/primarytransparant" />

    <RelativeLayout
        android:id="@+id/countPanel"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="@drawable/highlite"
        android:layout_below="@id/divider1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:text="@string/card_content_count"
            android:textColor="#000000"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/count2Text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:text="@string/layout_card_loading"
            android:textColor="#000000"
            android:textSize="14sp" />

    </RelativeLayout>
</RelativeLayout>